<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="bottom"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/imagebutton_home"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.20"
        android:backgroundTint="@color/white_100"
        android:src="@drawable/ic_home" />

    <ImageButton
        android:id="@+id/imagebutton_nutricionista"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.20"
        android:backgroundTint="@color/white_100"
        android:src="@drawable/ic_add_food" />

    <ImageButton
        android:id="@+id/imagebutton_food"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.20"
        android:backgroundTint="@color/white_100"
        android:src="@drawable/ic_food" />

    <ImageButton
        android:id="@+id/imagebutton_diario_alimentar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.20"
        android:backgroundTint="@color/white_100"
        android:src="@drawable/ic_calendar" />

    <ImageButton
        android:id="@+id/imagebutton_historico"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.20"
        android:backgroundTint="@color/white_100"
        android:src="@drawable/ic_add_food" />

</androidx.appcompat.widget.LinearLayoutCompat>