<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_component_home"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/red_default"
        android:gravity="left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imagebutton_settings_toolbar_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/large_margin"

            android:src="@drawable/ic_settings" />

        <ImageButton
            android:id="@+id/imagebutton_notication_toolbar_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/average_margin"

            android:src="@drawable/ic_notification" />

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/imageview_customer_toolbar_home"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="@dimen/xx_small_margin"
        android:src="@mipmap/img_profile_default"
        app:layout_constraintBottom_toTopOf="@id/textview_name_customer_toolbar_home"
        app:layout_constraintStart_toStartOf="@+id/textview_name_customer_toolbar_home" />

    <TextView
        android:id="@+id/textview_name_customer_toolbar_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/xx_small_margin"
        android:text="Gisele de almeida"
        android:textSize="@dimen/large_font"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/textview_tag_toolbar_home"
        app:layout_constraintStart_toStartOf="@id/textview_tag_toolbar_home" />

    <TextView
        android:id="@+id/textview_tag_toolbar_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_margin"
        android:background="@color/green_default"
        android:padding="4dp"
        android:text="Nutricionista"
        android:textColor="@color/white_100"
        android:textSize="@dimen/small_font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
