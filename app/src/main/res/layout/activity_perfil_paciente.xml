<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/include_toolbar_settings"
        layout="@layout/toolbar_settings"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#a6a6a6"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/foto"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/foto_redonda"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/legenda"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#8A494949"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/foto"
            tools:text="Alterar imagem"
            tools:textAlignment="center"
            tools:textColor="@color/white_100"
            tools:textSize="20sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:paddingLeft="180dp"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/legenda"
            app:layout_constraintStart_toStartOf="@+id/legenda"
            app:layout_constraintTop_toTopOf="@+id/foto" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/nome_usuario"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Ashley Morgan"
            tools:textSize="@dimen/large_font" />

        <TextView
            android:id="@+id/textview_tag_toolbar_pages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/green_default"
            android:padding="4dp"
            android:text="Nutricionista"
            android:textColor="@color/white_100"
            app:layout_constraintBottom_toBottomOf="@+id/nome_usuario"
            app:layout_constraintEnd_toEndOf="@+id/nome_usuario"
            app:layout_constraintStart_toStartOf="@+id/nome_usuario"
            app:layout_constraintTop_toBottomOf="@+id/nome_usuario" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldNomeCompleto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome completo"
            app:layout_constraintTop_toBottomOf="@+id/textview_tag_toolbar_pages">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_nome_paciente_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                tools:text="Ashley Morgan" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="e-mail"
            app:layout_constraintTop_toBottomOf="@+id/textFieldNomeCompleto">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_email_paciente_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                tools:text="ashley2023@gmail.com" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="senha"
            app:layout_constraintTop_toBottomOf="@+id/textFieldEmail">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_senha_paciente_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLength="10"
                tools:text="**********8W" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textFieldPassword">

            <TextView
                android:id="@+id/btn_redefinir_senha"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Redefinir senha"
                tools:textColor="@color/red_default" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

            <TextView
                android:id="@+id/btn_voltar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                tools:text="Voltar"
                tools:textAlignment="center"
                tools:textColor="@color/red_default" />

            <Button
                android:id="@+id/btn_salvar_alteracao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/red_default"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="Salvar alterações"
                tools:textSize="@dimen/small_font" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.appcompat.widget.LinearLayoutCompat>