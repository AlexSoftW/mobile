<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/black_200"
    android:paddingStart="@dimen/large_padding"
    android:paddingEnd="@dimen/large_padding">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_customer_toolbar_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageview_customer_toolbar_pages"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/default_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textview_name_customer_toolbar_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/average_margin"
        tools:text="Gisele Almeida"
        android:textColor="@color/white_200"
        android:textSize="@dimen/average_font"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/cardview_customer_toolbar_pages"
        app:layout_constraintTop_toTopOf="@+id/cardview_customer_toolbar_pages" />

    <TextView
        android:id="@+id/textview_tag_toolbar_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/green_default"
        android:padding="4dp"
        android:textColor="@color/white_100"
        app:layout_constraintBottom_toBottomOf="@+id/cardview_customer_toolbar_pages"
        app:layout_constraintStart_toStartOf="@+id/textview_name_customer_toolbar_pages"
        app:layout_constraintTop_toBottomOf="@id/textview_name_customer_toolbar_pages"
        tools:text="Nutricionista" />

    <ImageButton
        android:id="@+id/imagebutton_notification_toolbar_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/average_margin"
        android:backgroundTint="@color/black_200"
        android:src="@drawable/ic_notification"
        app:layout_constraintEnd_toStartOf="@id/imagebutton_settings_toolbar_pages"
        app:layout_constraintTop_toTopOf="@id/imagebutton_settings_toolbar_pages"
        tools:layout_editor_absoluteX="24dp" />

    <ImageButton
        android:id="@+id/imagebutton_settings_toolbar_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black_200"
        android:src="@drawable/ic_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>