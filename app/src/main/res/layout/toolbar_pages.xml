<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#B8B8B8"
    android:paddingStart="@dimen/large_padding"
    android:paddingEnd="@dimen/large_padding">

    <ImageView
        android:id="@+id/imageview_customer_toolbar_pages"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/img_profile_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_name_customer_toolbar_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/average_margin"
        android:text="Gisele Almeida"
        android:textColor="@color/black_100"
        android:textSize="@dimen/average_font"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageview_customer_toolbar_pages"
        app:layout_constraintTop_toTopOf="@+id/imageview_customer_toolbar_pages" />

    <TextView
        android:id="@+id/textview_tag_toolbar_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/green_default"
        android:padding="4dp"
        android:text="Nutricionista"
        android:textColor="@color/white_100"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_customer_toolbar_pages"
        app:layout_constraintStart_toStartOf="@+id/textview_name_customer_toolbar_pages"
        app:layout_constraintTop_toBottomOf="@id/textview_name_customer_toolbar_pages" />

    <ImageButton
        android:id="@+id/imagebutton_notification_toolbar_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/average_margin"

        android:src="@drawable/ic_notification"
        app:layout_constraintEnd_toStartOf="@id/imagebutton_settings_toolbar_pages"
        app:layout_constraintTop_toTopOf="@id/imagebutton_settings_toolbar_pages"
        tools:layout_editor_absoluteX="24dp" />

    <ImageButton
        android:id="@+id/imagebutton_settings_toolbar_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/ic_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>