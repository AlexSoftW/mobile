<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageview_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sucess"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_title_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="@dimen/average_font"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imageview_notification"
        app:layout_constraintStart_toEndOf="@id/imageview_notification"
        app:layout_constraintTop_toTopOf="@id/imageview_notification" />

    <TextView
        android:id="@+id/textview_subtitle_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="subtitle"
        app:layout_constraintStart_toStartOf="@id/textview_title_notification"
        app:layout_constraintTop_toBottomOf="@id/textview_title_notification" />

</androidx.constraintlayout.widget.ConstraintLayout>