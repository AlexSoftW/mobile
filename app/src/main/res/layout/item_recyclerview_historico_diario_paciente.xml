<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview_refeicao_item_recyclerview_historico_diario_paciente"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_alimentos_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_nome_refeicao_item_recyclerview_historico_diario_paciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/average_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:textSize="@dimen/large_font"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/imageview_refeicao_item_recyclerview_historico_diario_paciente"
            app:layout_constraintTop_toBottomOf="@id/imageview_refeicao_item_recyclerview_historico_diario_paciente"
            tools:text="Almoço" />

        <TextView
            android:id="@+id/textview_tag_qtd_calorias_item_recyclerview_historico_diario_paciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_total_fat"
            app:layout_constraintStart_toStartOf="@id/textview_nome_refeicao_item_recyclerview_historico_diario_paciente"
            app:layout_constraintTop_toBottomOf="@id/textview_nome_refeicao_item_recyclerview_historico_diario_paciente" />

        <TextView
            android:id="@+id/textview_qtd_calorias_item_recyclerview_historico_diario_paciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/textview_tag_qtd_calorias_item_recyclerview_historico_diario_paciente"
            app:layout_constraintStart_toEndOf="@id/textview_tag_qtd_calorias_item_recyclerview_historico_diario_paciente"
            app:layout_constraintTop_toTopOf="@id/textview_tag_qtd_calorias_item_recyclerview_historico_diario_paciente"
            tools:text="20000" />

        <TextView
            android:id="@+id/textview_informacoes_refeicao_item_recyclerview_historico_diario_paciente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/average_margin"
            android:layout_marginEnd="@dimen/average_margin"
            android:textSize="@dimen/small_font"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textview_tag_qtd_calorias_item_recyclerview_historico_diario_paciente"
            app:layout_constraintTop_toBottomOf="@id/textview_tag_qtd_calorias_item_recyclerview_historico_diario_paciente"
            tools:text="Arroz, Feijão, Alface, Contra-filé" />

        <TextView
            android:id="@+id/textview_tag_descricao_item_recyclerview_historico_diario_paciente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textview_informacoes_refeicao_item_recyclerview_historico_diario_paciente"
            app:layout_constraintTop_toBottomOf="@id/textview_informacoes_refeicao_item_recyclerview_historico_diario_paciente"
            tools:text="Observações: Consumir este alimento de imeditato." />

        <TextView
            android:id="@+id/textview_horario_consumido_item_recyclerview_historico_diario_paciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/average_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:drawablePadding="4dp"
            android:gravity="center"
            app:drawableStartCompat="@drawable/ic_calendar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="@id/textview_tag_descricao_item_recyclerview_historico_diario_paciente"
            app:layout_constraintTop_toBottomOf="@id/textview_tag_descricao_item_recyclerview_historico_diario_paciente"
            tools:text="25/11/2023 08h30" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>