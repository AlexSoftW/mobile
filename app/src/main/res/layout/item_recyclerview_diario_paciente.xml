<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview_refeicao_item_recyclerview_diario_paciente"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_alimentos_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_nome_refeicao_item_recyclerview_diario_paciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/average_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:text="Almoço"
            android:textSize="@dimen/large_font"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/imageview_refeicao_item_recyclerview_diario_paciente"
            app:layout_constraintTop_toBottomOf="@id/imageview_refeicao_item_recyclerview_diario_paciente" />

        <TextView
            android:id="@+id/textview_informacoes_refeicao_item_recyclerview_diario_paciente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/average_margin"
            android:text="Arroz, Feijão, Alface, Contra-filé"
            android:textSize="@dimen/average_font"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textview_nome_refeicao_item_recyclerview_diario_paciente"
            app:layout_constraintTop_toBottomOf="@id/textview_nome_refeicao_item_recyclerview_diario_paciente" />

        <Button
            android:id="@+id/button_consumido_item_recyclerview_diario_paciente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:text="Consumido"
            app:layout_constraintEnd_toStartOf="@+id/button_nao_consumido_item_recyclerview_diario_paciente"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_informacoes_refeicao_item_recyclerview_diario_paciente" />

        <Button
            android:id="@+id/button_nao_consumido_item_recyclerview_diario_paciente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:text="Não consumido"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_consumido_item_recyclerview_diario_paciente"
            app:layout_constraintTop_toBottomOf="@id/textview_informacoes_refeicao_item_recyclerview_diario_paciente" />

        <TextView
            android:id="@+id/textview_horario_consumido_item_recyclerview_diario_paciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/average_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:drawableStart="@drawable/ic_calendar_patient"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="25/11/2023 08h30"
            android:textSize="@dimen/average_font"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/textview_informacoes_refeicao_item_recyclerview_diario_paciente"
            app:layout_constraintStart_toStartOf="@id/textview_informacoes_refeicao_item_recyclerview_diario_paciente"
            app:layout_constraintTop_toBottomOf="@id/textview_informacoes_refeicao_item_recyclerview_diario_paciente" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>