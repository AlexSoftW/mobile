<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/large_margin"
    android:layout_marginEnd="@dimen/large_margin">

    <TextView
        android:id="@+id/textview_title_todos_nutricionistas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_all_nutritionist"
        android:textSize="@dimen/x_large_font"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_subtitle_todos_nutricionistas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_all_nutritionist"
        app:layout_constraintStart_toStartOf="@id/textview_title_todos_nutricionistas"
        app:layout_constraintTop_toBottomOf="@id/textview_title_todos_nutricionistas" />

    <com.google.android.material.search.SearchBar
        android:id="@+id/search_bar_todos_nutricionistas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-1dp"
        android:hint="@string/text_search_food_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/textview_subtitle_todos_nutricionistas"
        app:layout_constraintTop_toBottomOf="@id/textview_subtitle_todos_nutricionistas"
        tools:ignore="VisualLintBounds,SpeakableTextPresentCheck" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_todos_nutricionistas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_bar_todos_nutricionistas"
        tools:listitem="@layout/item_recycler_view_todos_nutricionistas" />

</androidx.constraintlayout.widget.ConstraintLayout>