<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/large_margin"
    android:layout_marginEnd="@dimen/large_margin">

    <TextView
        android:id="@+id/textview_title_todos_nutricionistas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:text="@string/title_all_nutritionist"
        android:textSize="@dimen/x_large_font"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_subtitle_todos_nutricionistas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_all_nutritionist"
        app:layout_constraintStart_toStartOf="@id/textview_title_todos_nutricionistas"
        app:layout_constraintTop_toBottomOf="@id/textview_title_todos_nutricionistas" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_todos_nutricionistas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/small_margin"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_subtitle_todos_nutricionistas"
        tools:listitem="@layout/item_recycler_view_todos_nutricionistas" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_seu_nutricionista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:visibility="gone"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@id/textview_subtitle_todos_nutricionistas"
        app:layout_constraintTop_toBottomOf="@id/textview_subtitle_todos_nutricionistas">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/average_margin">

            <View
                android:id="@+id/view_banner_item_seu_nutricionista"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/green_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageview_nutritionist_item_seu_nutricionista"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="@dimen/large_margin"
                android:background="@mipmap/default_profile"
                app:layout_constraintBottom_toBottomOf="@+id/view_banner_item_seu_nutricionista"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view_banner_item_seu_nutricionista"
                app:layout_constraintVertical_bias="0"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textview_name_nutritionist_item_seu_nutricionista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xx_small_margin"
                android:maxWidth="200dp"
                android:textSize="@dimen/average_font"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/imageview_nutritionist_item_seu_nutricionista"
                app:layout_constraintTop_toBottomOf="@id/imageview_nutritionist_item_seu_nutricionista"
                tools:text="Nome do nutricionista" />

            <ImageView
                android:id="@+id/imageview_gender_nutritionist_item_seu_nutricionista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_male_gender"
                app:layout_constraintBottom_toBottomOf="@+id/textview_name_nutritionist_item_seu_nutricionista"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/textview_name_nutritionist_item_seu_nutricionista"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textview_tag_nutritionist_item_seu_nutricionista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xx_small_margin"
                android:background="@color/green_default"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/text_nutritionist"
                android:textColor="@color/white_100"
                android:textSize="@dimen/small_font"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/textview_name_nutritionist_item_seu_nutricionista"
                app:layout_constraintTop_toBottomOf="@id/textview_name_nutritionist_item_seu_nutricionista" />

            <TextView
                android:id="@+id/textview_tag_telephone_item_seu_nutricionista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:text="@string/text_telephone"
                android:textSize="@dimen/small_font"
                app:layout_constraintStart_toStartOf="@id/textview_tag_nutritionist_item_seu_nutricionista"
                app:layout_constraintTop_toBottomOf="@id/textview_tag_nutritionist_item_seu_nutricionista" />

            <TextView
                android:id="@+id/textview_telephone_nutritionist_item_seu_nutricionista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/average_font"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/textview_tag_telephone_item_seu_nutricionista"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/textview_tag_telephone_item_seu_nutricionista"
                tools:text="(11) 91234-5678" />

            <TextView
                android:id="@+id/textview_tag_crn_item_seu_nutricionista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:text="@string/text_crn"
                android:textSize="@dimen/small_font"
                app:layout_constraintStart_toStartOf="@id/textview_tag_telephone_item_seu_nutricionista"
                app:layout_constraintTop_toBottomOf="@id/textview_tag_telephone_item_seu_nutricionista" />

            <TextView
                android:id="@+id/textview_crn_nutricionista_item_seu_nutricionista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/average_font"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/textview_tag_crn_item_seu_nutricionista"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/textview_tag_crn_item_seu_nutricionista"
                tools:text="123.45678-x" />

            <TextView
                android:id="@+id/textview_tag_email_item_seu_nutricionista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:text="@string/text_email"
                android:textSize="@dimen/small_font"
                app:layout_constraintStart_toStartOf="@id/textview_tag_crn_item_seu_nutricionista"
                app:layout_constraintTop_toBottomOf="@id/textview_tag_crn_item_seu_nutricionista" />

            <TextView
                android:id="@+id/textview_email_nutricionista_item_seu_nutricionista"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:maxWidth="260dp"
                android:textSize="@dimen/average_font"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/textview_tag_email_item_seu_nutricionista"
                app:layout_constraintTop_toBottomOf="@id/textview_crn_nutricionista_item_seu_nutricionista"
                app:layout_constraintVertical_bias="0.14"
                tools:ignore="TextSizeCheck"
                tools:text="nutricionista@sptech.school" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/imagebutton_whatsapp_item_seu_nutricionista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_margin"
                android:backgroundTint="@color/zapzap_color"
                android:text="Whatsapp"
                android:textColor="@color/white_100"
                app:icon="@drawable/ic_whatsapp"
                app:iconTint="@color/white_100"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textview_tag_email_item_seu_nutricionista"
                app:layout_constraintTop_toBottomOf="@id/textview_tag_email_item_seu_nutricionista"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraSmall" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/button_desvincular_nutricionista_seu_nutricionista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/large_margin"
                android:layout_marginEnd="@dimen/large_margin"
                android:backgroundTint="@color/red_default"
                android:text="Desvincular"
                android:textColor="@color/white_100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imagebutton_whatsapp_item_seu_nutricionista"
                app:layout_constraintTop_toTopOf="@id/imagebutton_whatsapp_item_seu_nutricionista"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraSmall" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>