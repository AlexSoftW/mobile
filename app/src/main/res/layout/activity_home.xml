<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f7f7">

    <ImageView
        android:id="@+id/imageview_main_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_index"
        app:layout_constraintBottom_toTopOf="@+id/textview_titulo_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:src="@mipmap/logo"
        app:layout_constraintEnd_toEndOf="@id/imageview_main_home"
        app:layout_constraintStart_toStartOf="@id/imageview_main_home"
        app:layout_constraintTop_toTopOf="@id/imageview_main_home" />

    <TextView
        android:id="@+id/textview_titulo_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/large_margin"
        android:paddingStart="@dimen/average_margin"
        android:paddingEnd="@dimen/small_margin"
        android:text="@string/text_index"
        android:textSize="@dimen/x_large_font"
        app:layout_constraintBottom_toTopOf="@+id/button_home"
        app:layout_constraintStart_toStartOf="@id/imageview_main_home" />

    <Button
        android:id="@+id/button_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:backgroundTint="@color/red_default"
        android:drawableEnd="@drawable/ic_arrow_right_home"
        android:text="@string/text_button_index_home"
        android:textColor="@color/white_100"
        android:textSize="@dimen/large_font"
        app:layout_constraintBottom_toTopOf="@id/cardview_home"
        app:layout_constraintStart_toStartOf="@id/textview_titulo_home" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_home"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/x_small_font"
        android:backgroundTint="@color/black_200"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageview_icon_coracao_home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_heart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4" />

            <TextView
                android:id="@+id/textview_tag_icon_coracao_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bem-estar"
                android:textColor="@color/white_100"
                app:layout_constraintEnd_toEndOf="@id/imageview_icon_coracao_home"
                app:layout_constraintStart_toStartOf="@id/imageview_icon_coracao_home"
                app:layout_constraintTop_toBottomOf="@id/imageview_icon_coracao_home" />

            <ImageView
                android:id="@+id/imageview_linha_home"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/large_margin"
                android:src="@mipmap/line_home"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageview_icon_coracao_home"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textview_subtexto_card_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/text_carrosel_home"
                android:textColor="@color/white_100"
                android:textSize="@dimen/small_font"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageview_linha_home"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>