<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/large_margin"
    android:layout_marginEnd="@dimen/large_margin">

    <TextView
        android:id="@+id/textview_title_foods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alimentos"
        android:textSize="@dimen/x_large_font"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_subtitle_foods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Veja a lista completa de alimentos e seus benefícios"
        app:layout_constraintStart_toStartOf="@id/textview_title_foods"
        app:layout_constraintTop_toBottomOf="@id/textview_title_foods" />

    <TextView
        android:id="@+id/textview_tag_category_foods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x_large_margin"
        android:text="Categorias"
        android:textSize="@dimen/average_font"
        app:layout_constraintStart_toStartOf="@id/textview_subtitle_foods"
        app:layout_constraintTop_toBottomOf="@id/textview_subtitle_foods" />

    <com.google.android.material.search.SearchBar
        android:id="@+id/search_bar_foods"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_margin"
        android:hint="Busque pelo nome"
        app:layout_constraintBottom_toBottomOf="@+id/textview_tag_category_foods"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textview_tag_category_foods"
        app:layout_constraintTop_toTopOf="@+id/textview_tag_category_foods" />

    <HorizontalScrollView
        android:id="@+id/horizontal_scrool_view_foods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x_large_margin"
        app:layout_constraintStart_toStartOf="@id/textview_tag_category_foods"
        app:layout_constraintTop_toBottomOf="@id/textview_tag_category_foods">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageview_carnes_category_foods"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/baseline_circle_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="carnes"
                app:layout_constraintEnd_toEndOf="@id/imageview_carnes_category_foods"
                app:layout_constraintStart_toStartOf="@id/imageview_carnes_category_foods"
                app:layout_constraintTop_toBottomOf="@id/imageview_carnes_category_foods" />

            <ImageView
                android:id="@+id/imageview_frutas_category_foods"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/baseline_circle_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@id/imageview_carnes_category_foods"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="frutas"
                app:layout_constraintEnd_toEndOf="@id/imageview_frutas_category_foods"
                app:layout_constraintStart_toStartOf="@id/imageview_frutas_category_foods"
                app:layout_constraintTop_toBottomOf="@id/imageview_frutas_category_foods" />

            <ImageView
                android:id="@+id/imageview_graos_category_foods"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/baseline_circle_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@id/imageview_frutas_category_foods"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="graos"
                app:layout_constraintEnd_toEndOf="@id/imageview_graos_category_foods"
                app:layout_constraintStart_toStartOf="@id/imageview_graos_category_foods"
                app:layout_constraintTop_toBottomOf="@id/imageview_graos_category_foods" />

            <ImageView
                android:id="@+id/imageview_massas_category_foods"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/baseline_circle_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@id/imageview_graos_category_foods"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="massas"
                app:layout_constraintEnd_toEndOf="@id/imageview_massas_category_foods"
                app:layout_constraintStart_toStartOf="@id/imageview_massas_category_foods"
                app:layout_constraintTop_toBottomOf="@id/imageview_massas_category_foods" />

            <ImageView
                android:id="@+id/imageview_verduras_category_foods"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/baseline_circle_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@id/imageview_massas_category_foods"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verduras"
                app:layout_constraintEnd_toEndOf="@id/imageview_verduras_category_foods"
                app:layout_constraintStart_toStartOf="@id/imageview_verduras_category_foods"
                app:layout_constraintTop_toBottomOf="@id/imageview_verduras_category_foods" />

            <ImageView
                android:id="@+id/imageview_legumes_category_foods"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/baseline_circle_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@id/imageview_verduras_category_foods"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legumes"
                app:layout_constraintEnd_toEndOf="@id/imageview_legumes_category_foods"
                app:layout_constraintStart_toStartOf="@id/imageview_legumes_category_foods"
                app:layout_constraintTop_toBottomOf="@id/imageview_legumes_category_foods" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>

    <ImageView
        android:id="@+id/imageview_icon_diabetes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:src="@drawable/ic_diabetes"
        app:layout_constraintStart_toStartOf="@id/horizontal_scrool_view_foods"
        app:layout_constraintTop_toBottomOf="@id/horizontal_scrool_view_foods" />

    <TextView
        android:id="@+id/textview_tag_diabetes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/xx_small_margin"
        android:text="Diabetes"
        app:layout_constraintBottom_toBottomOf="@id/imageview_icon_diabetes"
        app:layout_constraintStart_toEndOf="@id/imageview_icon_diabetes"
        app:layout_constraintTop_toTopOf="@id/imageview_icon_diabetes" />

    <ImageView
        android:id="@+id/imageview_icon_hipertensao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/average_margin"
        android:src="@drawable/ic_hipertensao"
        app:layout_constraintStart_toEndOf="@id/textview_tag_diabetes"
        app:layout_constraintTop_toTopOf="@+id/imageview_icon_diabetes" />

    <TextView
        android:id="@+id/textview_tag_hipertensao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/xx_small_margin"
        android:text="Hipertensão"
        app:layout_constraintBottom_toBottomOf="@id/imageview_icon_hipertensao"
        app:layout_constraintStart_toEndOf="@id/imageview_icon_hipertensao"
        app:layout_constraintTop_toTopOf="@id/imageview_icon_hipertensao" />

    <ImageView
        android:id="@+id/imageview_icon_colesterol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/average_margin"
        android:src="@drawable/ic_colesterol"
        app:layout_constraintStart_toEndOf="@id/textview_tag_hipertensao"
        app:layout_constraintTop_toTopOf="@+id/imageview_icon_diabetes" />

    <TextView
        android:id="@+id/textview_tag_colesterol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/xx_small_margin"
        android:text="Colesterol"
        app:layout_constraintBottom_toBottomOf="@id/imageview_icon_colesterol"
        app:layout_constraintStart_toEndOf="@id/imageview_icon_colesterol"
        app:layout_constraintTop_toTopOf="@id/imageview_icon_colesterol" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/average_margin"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_icon_diabetes"
        tools:listitem="@layout/item_recycler_view_foods" />

</androidx.constraintlayout.widget.ConstraintLayout>