<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="@android:color/white" /> <!-- Cor do fundo quando focado -->
            <stroke android:width="1dp" android:color="#000000" /> <!-- Largura e cor da borda quando focado -->
            <corners android:radius="3dp" /> <!-- Raio dos cantos -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/white" /> <!-- Cor do fundo padrão -->
            <stroke android:width="1dp" android:color="@color/black_100" /> <!-- Largura e cor da borda padrão -->
            <corners android:radius="3dp" /> <!-- Raio dos cantos -->
        </shape>
    </item>
</selector>